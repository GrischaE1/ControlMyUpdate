<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="900" Height="800" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Background="#35333a" BorderBrush="#666374" Foreground="#514e5d" OpacityMask="#5b586d" Name="TestWPF1" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Title="Windows Update Custom Profile Generator" WindowChrome.IsHitTestVisibleInChrome="True">


	<Grid>
		<TabControl TabStripPlacement="Left" Name="MenuNavigation">
			<TabControl.Resources>
				<Style TargetType="{x:Type TabItem}">
					<Setter Property="HeaderTemplate">
						<Setter.Value>
							<DataTemplate>
								<ContentPresenter Content="{TemplateBinding Content}">
									<ContentPresenter.LayoutTransform>
										<RotateTransform Angle="270" />
									</ContentPresenter.LayoutTransform>
								</ContentPresenter>
							</DataTemplate>
						</Setter.Value>
					</Setter>
					<Setter Property="Padding" Value="20" />
				</Style>
			</TabControl.Resources>


			<TabItem Header="Windows Update CSP" Name="TABUpdateCSP">

				<Grid ShowGridLines="False">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="150"></ColumnDefinition>
						<ColumnDefinition></ColumnDefinition>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition></RowDefinition>
					</Grid.RowDefinitions>

					<StackPanel Background="#002f54" SnapsToDevicePixels="True" Grid.Row="0" Grid.Column="0">
						
						<Button Content="General" VerticalAlignment="Top" Height="40" Background="#8c4803" BorderThickness="0,0,0,0" FontWeight="Bold" Foreground="#ffffff" Name="Tab1BT" />
						<Button Content="Timing" VerticalAlignment="Top" Height="40" Background="#002f54" BorderThickness="0,0,0,0" FontWeight="Bold" Foreground="#ffffff" Name="Tab2BT" />
						<Button Content="Releases" VerticalAlignment="Top" Height="40" Background="#002f54" BorderThickness="0,0,0,0" FontWeight="Bold" Foreground="#ffffff" Name="Tab3BT" />
						<Button IsEnabled="False" Content="WSUS" VerticalAlignment="Top" Height="40" Background="#002f54" BorderThickness="0,0,0,0" FontWeight="Bold" Foreground="#5b5a5c" Name="TabWSUSBT" />
					</StackPanel>

					<TabControl Grid.Row="0" Grid.Column="1" Padding="-1" Name="TabNav" SelectedIndex="0">

						<TabItem Header="General" Visibility="Collapsed" Name="Tab1">
							<Grid Background="#2e628c">
								<TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Text="General" FontSize="14" FontWeight="Bold" Height="21" Foreground="#ffffff" />
								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Use the Control My Update Solution" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,50,0,0" />
								<CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Content="" Margin="350,53,0,0" Name="ToolCheckBox" IsChecked="True" />
								<Label HorizontalAlignment="Left" VerticalAlignment="Top" Content="The Control My Update Solution provides you a granular control and the best possible reporting." Foreground="#ffffff" Margin="19,62,0,0" />


								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="How many rings do you want to configure" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,100,0,0" />
								<Slider Minimum="1" Maximum="9" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="350,100,0,0" Name="RingSlider" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
								<TextBox Text="{Binding ElementName=RingSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Height="21" Margin="570,100,0,0" />
								<Label HorizontalAlignment="Left" VerticalAlignment="Top" Content="With equal or less than 3 Rings, all rings should be in the GA Channel" Foreground="#ffffff" Margin="150,130,0,0" Name="RingDescription" />

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="What is the update source" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,170,0,0" />
								<ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,170,0,0" Name="UpdateSource">
									<ComboBoxItem IsSelected="True">Microsoft Update</ComboBoxItem>
									<ComboBoxItem>WSUS</ComboBoxItem>
								</ComboBox>

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Exclude 3rd Party drivers" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,220,0,0" />
								<CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,223,0,0" Name="DriversCheckBox" IsChecked="True" />

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Set Windows Telemetry level to Basic" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,270,0,0" />
								<CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,273,0,0" Name="TelemetryCheckBox" IsChecked="True" />

								<TextBlock Visibility="Hidden" HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Automatic Update configuration" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,320,0,0" Name="AutoUpdate" />
								<ComboBox Visibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,320,0,0" Name="AutoUpdateConfig">
									<ComboBoxItem>Notify the user before downloading the update</ComboBoxItem>
									<ComboBoxItem>Auto install the update and then notify the user to schedule a device restart</ComboBoxItem>
									<ComboBoxItem>Auto install and restart</ComboBoxItem>
									<ComboBoxItem>Auto install and restart at a specified time</ComboBoxItem>
									<ComboBoxItem>Auto install and restart without end-user control</ComboBoxItem>
									<ComboBoxItem>Updates automatically download and install at an optimal time determined by the device</ComboBoxItem>
									<ComboBoxItem IsSelected="True">Turn off automatic updates</ComboBoxItem>
								</ComboBox>


								<Button Content="Next" HorizontalAlignment="right" VerticalAlignment="bottom" Width="200" Name="NextTab1" Height="38" />

							</Grid>
						</TabItem>

						<TabItem Header="Timing" Visibility="Collapsed" Name="Tab2">
							<Grid Background="#2e628c">
								<TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Text="Timing" FontSize="14" FontWeight="Bold" Height="21" Foreground="#ffffff" />
								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Deferrals" FontSize="14" FontWeight="Bold" Height="21" Foreground="#ffffff" Margin="24,50,0,0" />
								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Quality Updates deferral (days)" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,100,0,0" Name="CUSliderLabel" />
								<Slider Minimum="0" Maximum="30" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="350,100,0,0" Name="CUSlider" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
								<TextBox Text="{Binding ElementName=CUSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="21" Margin="570,100,0,0" Name="CUSliderTextBox"/>

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Feature Updates deferral (days)" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,150,0,0" Name="FUSliderLabel"/>
								<Slider Minimum="0" Maximum="365" TickPlacement="BottomRight" TickFrequency="10" IsSnapToTickEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="350,150,0,0" Name="FUSlider" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
								<TextBox Text="{Binding ElementName=FUSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="21" Margin="570,150,0,0" Name="FUSliderTextBox"/>

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Restart deferral (days)" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,200,0,0" Name="RestartDeferralLabel"/>
								<Slider Minimum="2" Maximum="30" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="350,200,0,0" Name="RestartSlider" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
								<TextBox Text="{Binding ElementName=RestartSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="21" Margin="570,200,0,0" Name="RestartDeferralTextBox"/>

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Restart grace period (days)" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,230,0,0" Name="RestartGraceabel"/>
								<Slider Minimum="0" Maximum="7" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="350,230,0,0" Name="RestartGraceSlider" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
								<TextBox Text="{Binding ElementName=RestartGraceSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="21" Margin="570,230,0,0" Name="RestartGraceTextBox"/>


								<TextBlock  Visibility="Hidden" HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Update Scan Interval" FontSize="14" FontWeight="Bold" Height="21" Foreground="#ffffff" Margin="24,290,0,0" Name="ScanIntervalHeader" />

								<TextBlock  Visibility="Hidden" HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Update Scan Interval (hours)" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,330,0,0" Name="UpdateIntervalTextBlock" />
								<Slider  Visibility="Hidden" Minimum="1" Maximum="22" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="350,330,0,0" Name="UpdateIntervalSlider" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
								<TextBox  Visibility="Hidden" Text="{Binding ElementName=UpdateIntervalSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="21" Margin="570,330,0,0" Name="UpdateIntervalTextBox" />

								<Button Content="Previous" HorizontalAlignment="left" VerticalAlignment="bottom" Width="200" Name="PreviousTab2" Height="38" />
								<Button Content="Next" HorizontalAlignment="right" VerticalAlignment="bottom" Width="200" Name="NextTab2" Height="38" />


							</Grid>
						</TabItem>

						<TabItem Header="Releases" Visibility="Collapsed" Name="Tab3">
							<Grid Background="#2e628c">
								<TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Text="Release configuration" FontSize="14" FontWeight="Bold" Height="21" Foreground="#ffffff" />
								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Windows Release Branch" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,50,0,0" />
								<ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,50,0,0" Name="WindowsChannel">
									<ComboBoxItem>Windows Insider build - Fast</ComboBoxItem>
									<ComboBoxItem>Windows Insider build - Slow</ComboBoxItem>
									<ComboBoxItem>Release Windows Insider build</ComboBoxItem>
									<ComboBoxItem IsSelected="True">General Availability Channel (Targeted)</ComboBoxItem>
								</ComboBox>

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Force Feature Update (disable safeguards)" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,100,0,0" />
								<CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Content="" Margin="350,103,0,0" Name="SafeguardCheckBox" />

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Target Product Version" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,150,0,0" />
								<ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,150,0,0" Name="ProductVersionSelection">
									<ComboBoxItem IsSelected="True">none</ComboBoxItem>
									<ComboBoxItem>Windows 10</ComboBoxItem>
									<ComboBoxItem>Windows 11</ComboBoxItem>
								</ComboBox>


								<TextBlock Visibility="Hidden" HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Target Release Version" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,200,0,0" Name="TargetReleaseVersion" />
								<ComboBox Visibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,200,0,0" Name="ReleaseVersionW10Box">
									<ComboBoxItem>1909</ComboBoxItem>
									<ComboBoxItem>2004</ComboBoxItem>
									<ComboBoxItem>20H2</ComboBoxItem>
									<ComboBoxItem>21H1</ComboBoxItem>
									<ComboBoxItem>21H2</ComboBoxItem>
									<ComboBoxItem>22H2</ComboBoxItem>
								</ComboBox>

								<ComboBox Visibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,200,0,0" Name="ReleaseVersionW11Box">
									<ComboBoxItem>21H2</ComboBoxItem>
									<ComboBoxItem>22H2</ComboBoxItem>
								</ComboBox>

								<Button Content="Previous" HorizontalAlignment="left" VerticalAlignment="bottom" Width="200" Name="PreviousTab3" Height="38" />
								<Button Content="Next" HorizontalAlignment="right" VerticalAlignment="bottom" Width="200" Name="NextTab3" Height="38" />

							</Grid>
						</TabItem>

						<TabItem Header="WSUS" Visibility="Collapsed" Name="TabWSUS">
							<Grid Background="#2e628c">
								<TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Text="WSUS Settings" FontSize="14" FontWeight="Bold" Height="21" Foreground="#ffffff" />

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="WSUS Update Service URL" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,50,0,0" />
								<TextBox Text="https://" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="220" TextWrapping="Wrap" Margin="350,50,0,0" Name="WSUSURL" />

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="WSUS Update Service alternate URL" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,100,0,0" />
								<TextBox Text="https://" HorizontalAlignment="Left" VerticalAlignment="Top" Height="23" Width="220" TextWrapping="Wrap" Margin="350,100,0,0" Name="WSUSaltURL" />

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Allow Non-Microsoft Signed Update" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,150,0,0" />
								<CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Content="" Margin="350,153,0,0" Name="AllowNonMicrosoftSignedUpdate" />

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Use WSUS TLS certificate pinning" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,200,0,0" />
								<CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Content="" Margin="350,203,0,0" Name="UseTSLpinning" />

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Allow Windows Update Internet location" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,250,0,0" />
								<CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Content="" Margin="350,253,0,0" Name="AllowUpdateService" />

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Download Updates only from WSUS" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,300,0,0" />
								<ListView SelectionMode="Multiple" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="1" Height="90" VerticalAlignment="Top" Width="130" Margin="350,300,0,0" Name="DualScanSelection">
									<ListView.Items>
										<TextBlock>Driver</TextBlock>
										<TextBlock>Feature Updates</TextBlock>
										<TextBlock>Quality Updates</TextBlock>
										<TextBlock>Other</TextBlock>
									</ListView.Items>
								</ListView>

								<Button Content="Next" HorizontalAlignment="right" VerticalAlignment="bottom" Width="200" Name="NextTabWSUS" Height="38" />
								<Button Content="Previous" HorizontalAlignment="left" VerticalAlignment="bottom" Width="200" Name="PreviousTabWSUS" Height="38" />


							</Grid>
						</TabItem>
					</TabControl>
				</Grid>
			</TabItem>


			<TabItem Header="Control My Update" Name="TABCustomToolConfig">


				<Grid ShowGridLines="False">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="150"></ColumnDefinition>
						<ColumnDefinition></ColumnDefinition>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition></RowDefinition>
					</Grid.RowDefinitions>

					<StackPanel Background="#002f54" SnapsToDevicePixels="True" Grid.Row="0" Grid.Column="0">
						
						<Button Content="General" VerticalAlignment="Top" Height="40" Background="#8c4803" BorderThickness="0,0,0,0" FontWeight="Bold" Foreground="#ffffff" Name="CMUTab1BT" />
						<Button Content="Maintenance Window" VerticalAlignment="Top" Height="40" Background="#002f54" BorderThickness="0,0,0,0" FontWeight="Bold" Foreground="#ffffff" Name="CMUTab2BT" />
						<Button Content="Reboot settings" VerticalAlignment="Top" Height="40" Background="#002f54" BorderThickness="0,0,0,0" FontWeight="Bold" Foreground="#ffffff" Name="CMUTab3BT" />
						<Button Content="Special KB's" VerticalAlignment="Top" Height="40" Background="#002f54" BorderThickness="0,0,0,0" FontWeight="Bold" Foreground="#ffffff" Name="CMUTab4BT" />
					</StackPanel>

					<TabControl Grid.Row="0" Grid.Column="1" Padding="-1" Name="CMUTabNav" SelectedIndex="0">

						<TabItem Header="General" Visibility="Collapsed" Name="CMUTab1">
							<Grid Background="#2e628c">
								<TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Text="General" FontSize="14" FontWeight="Bold" Height="21" Foreground="#ffffff" />
								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Report only" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,50,0,0" />
								<CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Content="" Margin="350,53,0,0" Name="ReportOnly" />

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Update Source" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,80,0,0" />
								<ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="350,83,0,0"  Name="ToolUpdateSource">
									<ComboBoxItem IsSelected="True">Default</ComboBoxItem>
									<ComboBoxItem>Microsoft Update</ComboBoxItem>
									<ComboBoxItem>WSUS</ComboBoxItem>
								</ComboBox>

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Download update before installation" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,110,0,0" />
								<CheckBox IsChecked="True" HorizontalAlignment="Left" VerticalAlignment="Top" Content="" Margin="350,113,0,0" Name="DirectDownload" />


								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Update Scan Interval (hours)" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,140,0,0" Name="CMUUpdateIntervalTextBlock" />
								<Slider Value="4" Minimum="1" Maximum="22" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="350,140,0,0" Name="CMUUpdateIntervalSlider" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
								<TextBox Text="{Binding ElementName=CMUUpdateIntervalSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="21" Margin="570,140,0,0" Name="CMUUpdateIntervalTextBox" />


								<TextBlock  HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Update Scan randomization (in minutes)" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,170,0,0"/>
								<Slider  Minimum="0" Maximum="240" TickPlacement="BottomRight" TickFrequency="10" IsSnapToTickEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="350,170,0,0" Name="ScanRandomizationSlider" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
								<TextBox  Text="{Binding ElementName=ScanRandomizationSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="21" Margin="570,170,0,0" Name="ScanRandomizationTextBox"/>

								<TextBlock  HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Retries for incorrect downloads and installations" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,200,0,0"/>
								<Slider Value="3"  Minimum="0" Maximum="99" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="350,200,0,0" Name="RetryCountSlider" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
								<TextBox  Text="{Binding ElementName=RetryCountSlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="21" Margin="570,200,0,0" Name="RetryCountTextBox"/>

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Download update before installation" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,230,0,0" />
								<CheckBox IsChecked="True" HorizontalAlignment="Left" VerticalAlignment="Top" Content="" Margin="350,233,0,0" Name="RunConnectionTests" />



								<Button Content="Next" HorizontalAlignment="right" VerticalAlignment="bottom" Width="200" Name="CMUNextTab1" Height="38" />

							</Grid>
						</TabItem>					
					



						<TabItem Header="Maintenance Window" Visibility="Collapsed" Name="CMUTab2">
							<Grid Background="#2e628c">
								<TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Text="Maintenance Window" FontSize="14" FontWeight="Bold" Height="21" Foreground="#ffffff" />
							
								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Enable maintenance Window" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,50,0,0" />
								<CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Content="" Margin="350,53,0,0" Name="EnablemaintenanceWindow" />

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Maintenance Window Start Time" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,80,0,0" />
								<TextBox IsEnabled="False" MaxLength="5" Text="00:00" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="40" TextWrapping="Wrap" Margin="350,80,0,0" Name="MWStartTime" />
								<TextBlock Visibility="Hidden" HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="24 hour format 00:00 - 24:00" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="400,80,0,0" Name="StartTimeHelpText"/>

								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Maintenance Window End Time" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,110,0,0" />
								<TextBox IsEnabled="False" MaxLength="5" Text="00:00" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20" Width="40" TextWrapping="Wrap" Margin="350,110,0,0" Name="MWEndTime" />
								<TextBlock Visibility="Hidden" HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="24 hour format 00:00 - 24:00" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="400,110,0,0" Name="StopTimeHelpText"/>


								<TextBlock HorizontalAlignment="left" VerticalAlignment="Top" TextWrapping="Wrap" Text="Maintenance Window Day(s)" FontSize="14" FontWeight="Normal" Height="21" Foreground="#ffffff" Margin="24,140,0,0" />
								<ListView IsEnabled="False" SelectionMode="Multiple" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="1" Height="145" VerticalAlignment="Top" Width="100" Margin="350,140,0,0" Name="MWDays">
									<ListView.Items>
										<TextBlock>Monday</TextBlock>
										<TextBlock>Tuesday</TextBlock>
										<TextBlock>Wednesday</TextBlock>
										<TextBlock>Thursday</TextBlock>
										<TextBlock>Friday</TextBlock>
										<TextBlock>Saturday</TextBlock>
										<TextBlock>Sunday</TextBlock>
									</ListView.Items>
								</ListView>

								<Button Content="Next" HorizontalAlignment="right" VerticalAlignment="bottom" Width="200" Name="CMUNextTab2" Height="38" />
								<Button Content="Previous" HorizontalAlignment="left" VerticalAlignment="bottom" Width="200" Name="CMUPreviousTab2" Height="38" />


							</Grid>
						</TabItem>




						<TabItem Header="Reboot settings" Visibility="Collapsed" Name="CMUTab3">
							<Grid Background="#2e628c">
